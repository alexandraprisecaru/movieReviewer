{{ form_start(form) }}

<style>
    .rightAlign {text-align:right; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .bold { font-weight:bold; }
</style>

<div  class="form-group row">
    <div class="col-sm-2 col-form-label rightAlign bold">
        {{ form_label(form.title, "Title:") }}
    </div>
    <div class="col-sm-8 form-group">
        {{ form_widget(form.title) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2 col-form-label rightAlign bold">
        {{ form_label(form.comment, "Comment:") }}
    </div>
    <div class="col-sm-8 form-group">
        {{ form_widget(form.comment) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2 col-form-label rightAlign bold">
        {{ form_label(form.rating, "Rating: ") }}
    </div>
    <div class="col-sm-8 form-group">
        {{ form_widget(form.rating) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2 col-form-label rightAlign bold">
        {{ form_label(form.idUser, "User: ") }}
    </div>
    <div class="col-sm-8 form-group">
        {{ form_widget(form.idUser) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2 col-form-label rightAlign bold">
        {{ form_label(form.idMovie, "Movie: ") }}
    </div>
    <div class="col-sm-8 form-group">
        {{ form_widget(form.idMovie) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2 col-form-label rightAlign"></div>
    <div class="col-sm-8 form-group">
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>
</div>

{{ form_end(form) }}