<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.2.1/cerulean/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="container">
            <div style="text-align:center;">
                {{ render(controller('App\\Controller\\SearchController::index'))}}
            </div>
            <div class="d-flex justify-content-around" style="display:inline-flex; padding:10px;">
                <a class="btn btn-success" href="{{ path('movie_index') }}">Show movies</a>
                <a class="btn btn-success" href="{{ path('actor_index') }}">Show actors</a>
                <a class="btn btn-success" href="{{ path('review_index') }}">Show reviews</a>
            </div>
            
            <div class="card" style="padding: 40px;">
                {% block body %}
                    {% form_theme form 'bootstrap_4_layout.html.twig' %}
                {% endblock %}
            </div>
        </div>
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
