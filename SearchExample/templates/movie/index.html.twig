{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movies</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Year</th>
                <th scope="col">Genre</th>
                <th scope="col" style="width: 10%">Trailer</th>
                <th scope="col">Rating</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr scope="row">
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.description }}</td>
                <td>{{ movie.year }}</td>
                <td>{{ movie.genre }}</td>
                <td><a href={{ movie.trailer }}/>{{ movie.title }} trailer</td>
                <td>{{ movie.rating }}</td>
                <td class="row">
                    <a href="{{ path('movie_show', {'id': movie.id}) }}">Show</a>
                    <p>&nbsp;|&nbsp;</p>
                    <a href="{{ path('movie_edit', {'id': movie.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('movie_new') }}">Create new</a>
{% endblock %}
