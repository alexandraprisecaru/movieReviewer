{{ form_start(form) }}
<style>
    .rightAlign {text-align:right; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .bold { font-weight:bold; }
</style>

<div class="form-group row">
    <div class="col-sm-2  col-form-label rightAlign bold">
    {{ form_label(form.firstName, "First name:") }}
    </div>
    <div class="col-sm-8 form-group">
        {{ form_widget(form.firstName) }}
    </div>
</div>

<div  class="form-group row">
    <div class="col-sm-2 col-form-label rightAlign bold">
        {{ form_label(form.lastName, "Last name:") }}
    </div>
    <div class="col-sm-8 form-group">
        {{ form_widget(form.lastName) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2 col-form-label rightAlign bold">
        {{ form_label(form.description, "Description:") }}
    </div>
    <div class="col-sm-8 form-group">
        {{ form_widget(form.description) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2 col-form-label rightAlign bold">
        {{ form_label(form.idMovie, "Movies: ") }}
    </div>
    <div class="col-sm-8 form-group">
        {{ form_widget(form.idMovie) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-2 col-form-label rightAlign"></div>
    <div class="col-sm-8 form-group">
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>
</div>

{{ form_end(form) }}