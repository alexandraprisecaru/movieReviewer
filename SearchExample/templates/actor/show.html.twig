{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
<style>
    .rightAlign {text-align:right; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .bold{ font-weight:bold;}
</style>
    <div class="form-group row">
        <span class="col-sm-2"></span>
        <div class="col-sm-8 form-group">
            <h1>Actor info</h1>
        </div>
    </div>
    
    <div class="form-group row">
        <p class="col-sm-2 rightAlign bold">
        Id:
        </p>
        <div class="col-sm-8 form-group">
            {{ actor.id }}
        </div>
    </div>
    
    <div class="form-group row">
        <p class="col-sm-2 rightAlign bold">
        First name:
        </p>
        <div class="col-sm-8 form-group">
            {{ actor.firstName }}
        </div>
    </div>

     <div class="form-group row">
        <p class="col-sm-2 rightAlign bold">
        Last name:
        </p>
        <div class="col-sm-8 form-group">
            {{ actor.lastName }}
        </div>
    </div>

    <div class="form-group row">
        <p class="col-sm-2 rightAlign bold">
        Description:
        </p>
        <div class="col-sm-8 form-group">
            {{ actor.description }}
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8 form-group">
            <a class="btn btn-primary" href="{{ path('actor_index') }}">Back</a>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8 form-group" style="display:inline-flex;">
             <a class="btn btn-link" style="padding-left:0;" href="{{ path('actor_edit', {'id': actor.id}) }}">Edit</a>
            {{ include('actor/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
